<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="730dp"
    android:background="@drawable/fondopago1"

    android:gravity="right"
    android:orientation="vertical"
    tools:context=".pasarela_de_pago">

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp"></Space>

    <FrameLayout
        android:id="@+id/contenedorTarjetas"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal|center_vertical">

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp"></Space>

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Iniciar Pago"></Button>

    <Space
        android:layout_width="match_parent"
        android:layout_height="220dp"></Space>

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Pagar"></Button>

</LinearLayout>